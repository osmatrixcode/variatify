{
  "name": "Variatify",
  "description": "Add effects like Slowed + Reverb or Nightcore to your Spotify songs - and it remembers your choice for each song.",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": ["storage", "sidePanel", "tabs"],
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {},
  "background": {
    "service_worker": "src/background.js"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["https://open.spotify.com/*"],
      "resources": [
        "src/injected/constants.js",
        "src/injected/detector.js",
        "src/injected/audio.js",
        "src/injected/main.js"
      ]
    }
  ]
}
